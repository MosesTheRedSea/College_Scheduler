<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:textColor="#FFFFFF"
    tools:context=".toDoList">


    <TextView
        android:id="@+id/todo_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="To Do List"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#FFFFFF"
        android:onClick="addItemToList"
        android:text="Add"
        android:textStyle="bold" />


    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#FFFFFF"
        android:onClick="editItem"
        android:text="edit"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Tap here to Add or Edit the name of the Event"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        />


    <EditText

        android:id="@+id/edit_text_position"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/transparent"
        android:text="Input(a number) which event you want to change"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/id_list_view"
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:textColor="@color/white">

    </ListView>

</LinearLayout>